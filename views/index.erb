<p>All the pizzas!!!</p>
<% for order in @orders %>
<div class="orders">
  <p>Name: <%= order.pretty_name() %> </p>
  <p>Order: <%= order.quantity() %> X <%= order.topping() %> </p>
  <p><a href="/pizza_orders/<%= order.id %>">Show Order</a></p>
  <form method="post" action="/pizza_orders/<%= order.id  %>/delete">
  <input id="delete" type="submit" value="Delete">
  </form>
  <form method="get" action="/pizza_orders/<%=order.id  %>/edit">
  <input id="edit" type="submit" value="Edit">
</form>
</div>
<% end %>
